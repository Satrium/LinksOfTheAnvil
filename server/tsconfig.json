{
    "compilerOptions": {
      "baseUrl": ".",
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "target": "es2020",
      "sourceMap": true,
      "outDir": "dist",
      "importHelpers": true,
      "paths": {
        "@global/*":["../shared/*"], 
      },
    },
    "lib": ["es2018"],
    "exclude": ["node_modules"]
  }